@page "{id}"
@model YouthAtHeart.Pages.EditProfileModel
@{
    ViewData["Title"] = "EditProfile";
}
<link rel="stylesheet" href="~/css/Profile.css" />
<div class="container">
    <div class="main-body">
        

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt=" " class="rounded-circle" width="150">
                            <div class="mt-3">
                                <label asp-for="user.role">@Model.user.role</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <form method="post">
                                <div class="row">
                                    <div class="col-sm-3">
                                
                                        <h6 class="mb-0">Full Name</h6>
                                        <input type="hidden" asp-for="user.userId" />
                                        <input type="hidden" asp-for="user.password" />
                                        <input type="hidden" asp-for="user.role" />
                                    </div>
                                    <div class="form-group">
                              
                                       <input asp-for="user.username" class="form-control" />
                                       <span asp-validation-for="user.username" class="text-danger"></span>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="form-group">
                                
                                        <input asp-for="user.email" class="form-control" />
                                        <span asp-validation-for="user.email" class="text-danger"></span>
                                    </div>
                                </div>
                                <hr>
                               <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Preferred Category</h6>
                                       
                                    </div>
                                    <div class="form-group">
                                        
                                        @Html.DropDownList("user.preferred", new SelectList(Enum.GetValues(typeof(Models.WorkshopType))), "--Select an option--", new { @class = "form-control" })
                                        <span asp-validation-for="user.preferred" class="text-danger"></span>
                                    </div>
                                </div>
                                 <hr>
                               <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Age</h6>
                                    </div>
                                    <div class="form-group">
                                
                                        <input asp-for="user.age" class="form-control" type="number"/>
                                        <span asp-validation-for="user.age" class="text-danger"></span>
                                    </div>
                                </div>
                       
                                <hr>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <input type="submit" class="btn btn-primary" value="Save" />
                                        <a asp-page="Profile" asp-route-id="@Model.user.username" class="btn btn-primary">Back</a>
                                        <div> <label class="text-danger">@Model.MyMessage</label> </div>
                                    </div>
                                </div>
                        </form>
                    </div>
                </div>

