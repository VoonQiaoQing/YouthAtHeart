@model IList<YouthAtHeart.Models.Booking>
@{
}

<style>

    .btn {
        @* background-color: #1c4450;*@
        border: none;
        outline: none;
        color: white;
        margin: 5px;
        text-align: center;
        display: inline-block;
        font-size: 12px;
        border-radius: 10px;
        cursor: pointer;
        transition-duration: 0.4s;
        text-transform: uppercase;
    }

    .btn:hover {
        box-shadow: 0 12px 16px 0 rgba(0, 0, 0, 0.24), 0 17px 50px 0 rgba(0, 0, 0, 0.19);
    }

    .buttons {
        display: flex;
        align-items: center;
    }
</style>

<!-- https://codewithmukesh.com/blog/jquery-datatable-in-aspnet-core/ -->
<!-- <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript" src="js/script.js"></script> -->

<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<div class="demo" style="width:700px;">
    <div class="container" style="width: 1700px;">
        <br />
        <div style="width:90%; margin:0 auto;">

            @*        <a class="btn btn-success" href="/CreateWorkshop">Delete</a>*@
            <p>
                <a class='btn btn-success' asp-page="CreateWorkshop">Booking List</a>
            </p>
            <table id="workshopDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="90%" cellspacing="0">
                <thead>
                    <tr>

                        <th>BookingId</th>
                        <th>CustomerId</th>
                        <th>WorkshopId</th>
                        <th>BookingAmount</th>

                        <th>Name</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Number of Attendees</th>
                        <th>Payment Status</th>

                        <th>
                        </th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        @if (Model != null && Model.Count >= 1)
                        {
                            int i = 1;
                            foreach (YouthAtHeart.Models.Booking sessionDetails in Model)
                            {
                                <tr>
                                    <td style="vertical-align: middle;">
                                        @i
                                    </td>
                                    <td style="vertical-align: middle;">
                                        @sessionDetails.BookingId
                                    </td>

                                    <td style="vertical-align: middle;">
                                        @sessionDetails.CustomerId
                                    </td>
                                    <td style="vertical-align: middle;">
                                        @sessionDetails.WorkshopId
                                    </td>
                                    <td style="vertical-align: middle;">
                                        @sessionDetails.BookingAmount
                                    </td>
                                    <td style="vertical-align: middle;">
                                        @sessionDetails.FirstName
                                    </td>
                                    <td style="vertical-align: middle;">
                                        @sessionDetails.PhoneNumber
                                    </td>
                                    <td style="vertical-align: middle;">
                                        @sessionDetails.Email
                                    </td>
                                    <td style="vertical-align: middle;">
                                        @sessionDetails.NumberOfAttendees
                                    </td>
                                    <td style="vertical-align: middle;">
                                        @sessionDetails.PaymentStatus
                                    </td>
                                    <td style="vertical-align: middle;">
                                        @*                                        <a href="../ViewBookingDetails/@sessionDetails.CartId" class="btn btn-outline-secondary" title="View Details & Update">Details </a>
                                            <button onclick="confirmBooking(@sessionDetails.OrderItemId)" class="btn btn-s, btn-outline-primary" title="Confirm Order placement">Confirm Booking</button>
                                            <button onclick="cancelBooking(@sessionDetails.OrderItemId)" class="btn btn-danger" title="Cancel booking and refund">Cancel Booking</button>*@
                                    </td>
                                </tr>
                                i = i + 1;
                            }
                        }
                        else
                        {
                            <tr><td colspan="8" class="text-center">No Records found</td></tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<td style="vertical-align: middle;">
    <a href="../ViewBookingDetails/@sessionDetails.CartId" class="btn btn-outline-secondary" title="View Details & Update">Details </a>
    <button onclick="confirmBooking(@sessionDetails.OrderItemId)" class="btn btn-s, btn-outline-primary" title="Confirm Order placement">Confirm Booking</button>
    <button onclick="cancelBooking(@sessionDetails.OrderItemId)" class="btn btn-danger" title="Cancel booking and refund">Cancel Booking</button>
</td>
